      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"Name the AI developed by OpenAI\",\n    \"type\": \"text\",\n    \"correctAnswer\": \"ChatGPT\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/quizzes/{{quizId}}/questions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "quizzes", "{{quizId}}", "questions"]
        }
      }
    },
    {
      "name": "Get Questions",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/api/quizzes/{{quizId}}/questions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "quizzes", "{{quizId}}", "questions"]
        }
      }
    },
    {
      "name": "Submit Quiz Answers",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"answers\": [\n        {\n            \"questionId\": \"{{singleQuestionId}}\",\n            \"selectedOptionIds\": [\"{{singleCorrectOptionId}}\"]\n        },\n        {\n            \"questionId\": \"{{multipleQuestionId}}\",\n            \"selectedOptionIds\": [\"{{multipleOption1Id}}\",\"{{multipleOption2Id}}\"]\n        },\n        {\n            \"questionId\": \"{{textQuestionId}}\",\n            \"text\": \"ChatGPT\"\n        }\n    ]\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/quizzes/{{quizId}}/submit",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "quizzes", "{{quizId}}", "submit"]
        }
      }
    },
