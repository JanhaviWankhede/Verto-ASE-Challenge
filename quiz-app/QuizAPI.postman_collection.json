          "mode": "raw",
          "raw": "{\n    \"title\": \"Math Quiz\"\n}"
        },
        "url": { "raw": "http://localhost:5000/api/quizzes", "protocol": "http", "host": ["localhost"], "port": "5000", "path": ["api", "quizzes"] }
