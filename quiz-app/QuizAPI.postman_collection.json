      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"What is 2 + 2?\",\n    \"type\": \"single\",\n    \"options\": [\n        {\"text\": \"3\", \"isCorrect\": false},\n        {\"text\": \"4\", \"isCorrect\": true}\n    ]\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/quizzes/{{quizId}}/questions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "quizzes", "{{quizId}}", "questions"]
        }
      }
    },
    {
      "name": "Add Multiple Choice Question",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"text\": \"Select prime numbers\",\n    \"type\": \"multiple\",\n    \"options\": [\n        {\"text\": \"2\", \"isCorrect\": true},\n        {\"text\": \"3\", \"isCorrect\": true},\n        {\"text\": \"4\", \"isCorrect\": false}\n    ]\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/quizzes/{{quizId}}/questions",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "quizzes", "{{quizId}}", "questions"]
        }
      }
    },
    {
